<% content_for :title, '个人信息修改' %>
<div class="page-content">
    <%= render "shared/page_breadcrumb", icon: 'icon-info' %>
    <div class="portlet-body form">
										<!-- BEGIN FORM-->
			<form class="form-horizontal">		
				<div class="form-body">
					<div class="form-group">
						<label class="col-md-3 control-label">帐户名：</label>
						<div class="col-md-4">
							<input type="text" class="form-control" id="username" placeholder="" disabled value="<%= current_user.username  %>">
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-3 control-label">姓名：</label>
						<div class="col-md-4">
							<input type="text" class="form-control"  id="name" placeholder="请输入姓名" value="<%= current_user.full_name %>">
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-3 control-label">电话：</label>
						<div class="col-md-4">
							<input type="tel" class="form-control" id="tel" placeholder="请输入电话号码" value="<%= current_user.phone %>">
							<div class="tel_tip"></div>
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-3 control-label">邮箱:</label>
						<div class="col-md-4">
							<input type="email" class="form-control" id="e-mail" placeholder="请输入邮箱，例:123@mail.com" value="<%= current_user.email %>">
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-3 control-label">旧密码：</label>
						<div class="col-md-4">
								<input type="password" class="form-control" id="oldpwd" placeholder="请输入旧密码">
								<div class="oldpwd_tip"></div>
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-3 control-label">新密码：</label>
						<div class="col-md-4">
								<input type="password" class="form-control" id="newpwd" placeholder="请输入新密码">
								<div class="pwd_tip"></div>
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-3 control-label">重复密码：</label>
						<div class="col-md-4">
							<input type="password" class="form-control spinner" id="repeatpwd" placeholder="请再次输入新密码">
						</div>
					</div>
				</div>
			<div class="form-actions down">
					<div class="row">
						<div class="col-md-offset-3 col-md-9">
							<button type="button" class="btn green hive-repeat-usercenter" id="yye">保存</button>
							<button type="button" class="btn default hive-relog">取消</button>
						</div>
					</div>
				</div></form>
			<!-- END FORM-->
		</div>
</div>