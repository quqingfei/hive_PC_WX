<% title "登录" %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name),html: { :class => "login-form"}) do |f| %>
    <h3 class="form-title">登录</h3>
    <% flash.each do |k, v| %>
      <% if k == "alert" and v == "Invalid username or password." %>
        <div class="alert alert-danger">
          <button id="h-login-close" class="close" data-close="alert"></button>
          <span>
            无效用户名或密码！
          </span>
        </div>
      <% end %>
    <% end %>
    <div class="form-group">
      <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
      <%= f.label :username, "用户名", class: "control-label visible-ie8 visible-ie9" %>
      <%= f.text_field :username, autofocus: true, class: "form-control form-control-solid placeholder-no-fix", autocomplete: "off", placeholder: "用户名" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "密码", class: "control-label visible-ie8 visible-ie9" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-solid placeholder-no-fix", placeholder: "密码" %>
    </div>
    <div class="form-actions">
      <%= f.submit "登录", class: "btn btn-success uppercase" %>
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "记住我", class: "rememberme check" %>
      <% end -%>
      <a href="javascript:;" id="forget-password" class="forget-password">忘记密码?</a>
    </div>
    <div class="create-account">
      <p>
        <a href="/users/sign_up" id="register-btn" class="uppercase">注册</a>
      </p>
    </div>
<% end %>
